<UserControl x:Class="GasFireMonitoringClient.Views.Controls.RomaniaMapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Map Header -->
        <Border Grid.Row="0" Background="LightBlue" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="🗺️ Romania - Gas Fire Monitoring System" 
                          FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="Click on a county to view sites in that area" 
                          FontStyle="Italic" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Map Canvas Container -->
        <Border Grid.Row="1" BorderBrush="DarkGray" BorderThickness="2" Background="White">
            <ScrollViewer x:Name="MapScrollViewer" 
                         HorizontalScrollBarVisibility="Auto"
                         VerticalScrollBarVisibility="Auto"
                         Background="LightCyan">

                <!-- Romania Map Canvas -->
                <Canvas x:Name="RomaniaMapCanvas" 
                       Width="800" 
                       Height="600"
                       Background="Transparent">

                    <!-- Simplified Romania Map Using Shapes -->
                    <!-- This is a placeholder - you would replace with your actual SVG map -->

                    <!-- Prahova County (Your main area) -->
                    <Polygon x:Name="PrahovaCounty"
                            Points="400,250 450,240 470,260 450,290 420,300 390,280"
                            Fill="LightGreen" 
                            Stroke="DarkGreen" 
                            StrokeThickness="2"
                            Cursor="Hand"
                            MouseEnter="County_MouseEnter"
                            MouseLeave="County_MouseLeave"
                            MouseLeftButtonDown="County_Click"
                            Tag="Prahova"
                            ToolTip="Prahova County - Click to view sites"/>

                    <!-- Prahova Label -->
                    <TextBlock Canvas.Left="410" Canvas.Top="265" 
                              Text="Prahova" 
                              FontWeight="Bold" 
                              IsHitTestVisible="False"/>

                    <!-- Gorj County (Your other area) -->
                    <Polygon x:Name="GorjCounty"
                            Points="300,320 350,310 370,340 350,370 320,380 290,360"
                            Fill="Orange" 
                            Stroke="DarkOrange" 
                            StrokeThickness="2"
                            Cursor="Hand"
                            MouseEnter="County_MouseEnter"
                            MouseLeave="County_MouseLeave"
                            MouseLeftButtonDown="County_Click"
                            Tag="Gorj"
                            ToolTip="Gorj County - Click to view sites"/>

                    <!-- Gorj Label -->
                    <TextBlock Canvas.Left="315" Canvas.Top="340" 
                              Text="Gorj" 
                              FontWeight="Bold" 
                              IsHitTestVisible="False"/>

                    <!-- Other counties (simplified placeholders) -->
                    <!-- Alba -->
                    <Ellipse x:Name="AlbaCounty" 
                            Canvas.Left="320" Canvas.Top="200"
                            Width="60" Height="40"
                            Fill="LightGray" 
                            Stroke="Gray" 
                            StrokeThickness="1"
                            Cursor="Hand"
                            MouseLeftButtonDown="County_Click"
                            Tag="Alba"
                            ToolTip="Alba County"/>
                    <TextBlock Canvas.Left="340" Canvas.Top="215" Text="Alba" FontSize="10" IsHitTestVisible="False"/>

                    <!-- Arad -->
                    <Ellipse x:Name="AradCounty" 
                            Canvas.Left="250" Canvas.Top="230"
                            Width="50" Height="35"
                            Fill="LightGray" 
                            Stroke="Gray" 
                            StrokeThickness="1"
                            Cursor="Hand"
                            MouseLeftButtonDown="County_Click"
                            Tag="Arad"
                            ToolTip="Arad County"/>
                    <TextBlock Canvas.Left="265" Canvas.Top="242" Text="Arad" FontSize="10" IsHitTestVisible="False"/>

                    <!-- Argeș -->
                    <Ellipse x:Name="ArgesCounty" 
                            Canvas.Left="380" Canvas.Top="300"
                            Width="50" Height="40"
                            Fill="LightGray" 
                            Stroke="Gray" 
                            StrokeThickness="1"
                            Cursor="Hand"
                            MouseLeftButtonDown="County_Click"
                            Tag="Argeș"
                            ToolTip="Argeș County"/>
                    <TextBlock Canvas.Left="395" Canvas.Top="315" Text="Argeș" FontSize="10" IsHitTestVisible="False"/>

                    <!-- Bacău -->
                    <Ellipse x:Name="BacauCounty" 
                            Canvas.Left="520" Canvas.Top="180"
                            Width="55" Height="40"
                            Fill="LightGray" 
                            Stroke="Gray" 
                            StrokeThickness="1"
                            Cursor="Hand"
                            MouseLeftButtonDown="County_Click"
                            Tag="Bacău"
                            ToolTip="Bacău County"/>
                    <TextBlock Canvas.Left="535" Canvas.Top="195" Text="Bacău" FontSize="10" IsHitTestVisible="False"/>

                    <!-- Bihor -->
                    <Ellipse x:Name="BihorCounty" 
                            Canvas.Left="240" Canvas.Top="160"
                            Width="50" Height="40"
                            Fill="LightGray" 
                            Stroke="Gray" 
                            StrokeThickness="1"
                            Cursor="Hand"
                            MouseLeftButtonDown="County_Click"
                            Tag="Bihor"
                            ToolTip="Bihor County"/>
                    <TextBlock Canvas.Left="255" Canvas.Top="175" Text="Bihor" FontSize="10" IsHitTestVisible="False"/>

                    <!-- Brașov -->
                    <Ellipse x:Name="BrasovCounty" 
                            Canvas.Left="480" Canvas.Top="280"
                            Width="50" Height="40"
                            Fill="LightGray" 
                            Stroke="Gray" 
                            StrokeThickness="1"
                            Cursor="Hand"
                            MouseLeftButtonDown="County_Click"
                            Tag="Brașov"
                            ToolTip="Brașov County"/>
                    <TextBlock Canvas.Left="495" Canvas.Top="295" Text="Brașov" FontSize="10" IsHitTestVisible="False"/>

                    <!-- Cluj -->
                    <Ellipse x:Name="ClujCounty" 
                            Canvas.Left="350" Canvas.Top="150"
                            Width="50" Height="40"
                            Fill="LightGray" 
                            Stroke="Gray" 
                            StrokeThickness="1"
                            Cursor="Hand"
                            MouseLeftButtonDown="County_Click"
                            Tag="Cluj"
                            ToolTip="Cluj County"/>
                    <TextBlock Canvas.Left="365" Canvas.Top="165" Text="Cluj" FontSize="10" IsHitTestVisible="False"/>

                    <!-- București -->
                    <Ellipse x:Name="BucharestCounty" 
                            Canvas.Left="450" Canvas.Top="350"
                            Width="60" Height="40"
                            Fill="LightGray" 
                            Stroke="Gray" 
                            StrokeThickness="1"
                            Cursor="Hand"
                            MouseLeftButtonDown="County_Click"
                            Tag="București"
                            ToolTip="București - Capital"/>
                    <TextBlock Canvas.Left="465" Canvas.Top="365" Text="București" FontSize="10" IsHitTestVisible="False"/>

                    <!-- Legend -->
                    <Border Canvas.Left="20" Canvas.Top="20" 
                           Background="White" 
                           BorderBrush="Gray" 
                           BorderThickness="1" 
                           Padding="10">
                        <StackPanel>
                            <TextBlock Text="Status Legend:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <Ellipse Width="15" Height="15" Fill="Green" Margin="0,0,5,0"/>
                                <TextBlock Text="Normal" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <Ellipse Width="15" Height="15" Fill="Orange" Margin="0,0,5,0"/>
                                <TextBlock Text="Alarm" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <Ellipse Width="15" Height="15" Fill="Red" Margin="0,0,5,0"/>
                                <TextBlock Text="Error" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <Ellipse Width="15" Height="15" Fill="Gray" Margin="0,0,5,0"/>
                                <TextBlock Text="Offline" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Status Summary -->
                    <Border Canvas.Left="650" Canvas.Top="20" 
                           Background="LightBlue" 
                           BorderBrush="DarkBlue" 
                           BorderThickness="1" 
                           Padding="10">
                        <StackPanel>
                            <TextBlock Text="System Overview" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock x:Name="TotalCountiesText" Text="Counties: 42" Margin="0,2"/>
                            <TextBlock x:Name="ActiveCountiesText" Text="Active: 2" Margin="0,2"/>
                            <TextBlock x:Name="TotalSitesOverviewText" Text="Total Sites: 10" Margin="0,2"/>
                            <TextBlock x:Name="ActiveAlarmsOverviewText" Text="Active Alarms: 0" Margin="0,2" Foreground="Red"/>
                        </StackPanel>
                    </Border>

                </Canvas>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>